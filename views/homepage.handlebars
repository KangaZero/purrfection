<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}}
      <a href="/project/{{project.id}}">{{project.name}}</a> --}} 
      {{!-- //Nav Bar + Dropdown function to be done --}}
    </h2>
    <div class="slideShowImages">
      <div class="SlideFade">
        <div class="numbertext">1 / 3</div>
        <img src="A" style="width: 100%"> 
        <div class="text">Our Pets</div>
      </div>
         <div class="SlideFade">
        <div class="numbertext">2 / 3</div>
        <img src="B" style="width: 100%"> 
        <div class="text">About Us</div>
      </div>
         <div class="SlideFade">
        <div class="numbertext">3 / 3</div>
        <img src="C" style="width: 100%"> 
        <div class="text">Post an Ad</div>
      </div>
    </div>
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div><br>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
  <footer><p> Group 6 Project 2022</p></footer>