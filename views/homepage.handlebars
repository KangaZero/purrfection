<div class="grid grid-cols-12 ">
  <div class="md:col-start-3 md:col-end-11 col-span-12 mb-4 p-4">
    <img
      src="https://images.squarespace-cdn.com/content/v1/575b28e2b6aa603c4ceac6b0/1523307437752-A19YS0CRUBN1GRXSVLBW/collie-dog-wide-high-resolution-wallpaper-download-dog-photos-free-cute-puffy-dogs-best-friend-3840x2160.jpg?format=2500w">
  </div>

  <h2 class="text-3xl font-bold text-orange-500 border-black col-span-12 text-center bg-white shadow-md py-4">Start expanding your family today
    through Purrfection!</h2>
  <!-- Most Recent Ads Posted -->
  <div class="p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md col-span-12 mx-auto my-4">
    <a href="/petAds/{{pet.id}}">
      <h5 class="mb-2 text-lg font-bold tracking-tight text-gray-900">Recently added</h5>
    </a>
    <img class="md:rounded-lg md:w-72 mb-4 object-center" src="{{pet.image}}" alt="">
    <p class="mb-3 text-xl font-normal text-gray-700">{{pet.name}} ({{pet.breed}})</p>
    <p class="mb-3 font-normal text-gray-700">Age: {{pet.age}}</p>
    <p class="mb-3 text-sm font-normal text-gray-700">{{pet.description}}</p>
    <p class="mb-3 text-sm font-normal text-gray-700">Seller: {{pet.user.first_name}}</p>
  </div>
</div>